<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MapMarkerText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/map_marker_text_size</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="MenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorText</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textScaleX">0.8</item>
        <item name="android:textSize">@dimen/buttons_text_size</item>
        <item name="android:layout_marginBottom">@dimen/buttons_margin</item>
        <item name="android:onClick">displayStatistics</item>
    </style>

    <style name="StatItemTextBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/stat_description_text</item>
    </style>

</resources>
